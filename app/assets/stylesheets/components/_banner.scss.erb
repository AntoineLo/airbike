.banner {
  color: white;
  text-align: center;
  height: 100vh;
  background-size: cover !important;
  display: flex;
  align-items: center;
  justify-content: center;
  background: url(<%= asset_path 'background.jpg' %>);
}
.banner h1 {
  font-size: 50px;
  font-weight: bold;
}
.banner h3 {
  font-family: "Helvetica";
  font-size: 30px;
}
.banner p {
  font-size: 20px;
  font-weight: lighter;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 20px;
}
.banner-content{
  margin-top: 0px;
  padding-bottom: 100px
}
