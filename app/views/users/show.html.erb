
        <div class="tabs">
          <a class="tab active" data-target="#bio">
            <p>Mon</p>
            <h3>Profile</h3>
          </a>
          <a class="tab" data-target="#announces">
            <p>Mes</p>
            <h3>Annonces</h3>
          </a>
          <a class="tab" data-target="#bookings">
            <p>Mes</p>
            <h3>Réservations</h3>
          </a>
        </div>


    <div class="container text-center">

      <div class="tab-content" id="bio">
        <div class="card-color">
          <h1><%= image_tag current_user.picture %></h1>
          <h3><%= current_user.first_name %></h3>
        </div>
      </div>

      <div class="tab-content hidden" id="announces">
          <div class="call-to-action">
            <%= link_to "Ajouter un vélo",
            new_user_bike_path(current_user),
            class: "btn btn-small btn-treehouse" %>
          </div>
          <% @user.bikes.each do |bike| %>
            <ul class="list-unstyled">
              <li class="product">
                <% bike.photos.each do |photo| %>
                   <%= cl_image_tag photo.path, width: 180, height: 110, crop: :fill, :class => "product-image" %>
                <% end %>
                <div class='product-body'>
                <h3><%= bike.kind %></h3>
                <p><%= bike.description %></p>
                </div>
                <%= link_to edit_user_bike_path(current_user, bike) do %>
                <i class="fa fa-pencil"></i>
                <% end %>
                </li>
              <% end %>
            </ul>
      </div>

      <div class="tab-content hidden" id="bookings">
        <p>Contact me if you want.</p>
      </div>

    </div>



