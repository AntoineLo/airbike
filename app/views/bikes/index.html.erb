<div class="wrapper">
  <div class="page-content">

    <div class="sidebar">
    <div class="container">
      <div class="row">
        <% @bikes.each do |bike| %>
        <div class="col-xs-12 col-sm-6 col-md-4">

          <%= link_to bike_path(bike) do %>
            <div class="card card-color">
              <div class="card-photo">
                <% bike.photos.each do |photo| %>
                  <% if photo.path.nil? %>
                    <img src="http://placehold.it/300x200" alt="" class="img-fluid">
                  <% else %>
                    <%= cl_image_tag photo.path, width: 250, height: 200, class: "img-fluid", crop: :fill %>
                  <% end %>
                <% end %>
              </div>
              <div class="card-footer">
                <div class="card-footer-text">
                  <h5><%= bike.description %></h5>
                  <p><%= bike.kind %></p><%# User.find(bike.user_id).rating * "<i class='fa fa-star'></i>" %>
                </div>
                <div class="card-footer-avatar">
                  <% if bike.user.picture.nil? %>
                    <%= image_tag "http://placehold.it/50x50", class: "avatar-large" %>
                  <% else %>
                    <%= image_tag bike.user.picture, class: "avatar-large" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>




        </div>
        <% end %>
      </div>
    </div>
    </div>

  </div>
</div>
