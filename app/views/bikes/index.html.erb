<div class="wrapper">
  <div class="page-content">
    <div class="container-fluid main">
      <div class="row">
        <div class="col-xs-12 col-sm-8">
          <div class="cards">
            <div class="container-fluid">
              <div class="row">
                <% if @bikes.first.nil? %>
                  <h1 class="text-center"><i class="fa fa-frown-o"></i></h1>
                  <h2 class="text-center">Sorry, there is no bike available in your area.</h2>
                  <p class="text-center">Try with some place that makes sens</p>
                <% end %>
                <% @bikes.each do |bike| %>
                <div class="col-xs-12 col-md-4">
                  <%= link_to bike_path(bike) do %>
                    <div class="card card-color">
                      <div class="card-photo">
                        <% bike.photos.each do |photo| %>
                          <% if photo.path.nil? %>
                            <img src="http://placehold.it/300x200" alt="" class="img-fluid">
                          <% else %>
                            <div class="picture">
                            <h5><span><%= bike.price %> â‚¬</span></h5>
                              <%= cl_image_tag photo.path, width: 250, height: 200, class: "img-fluid pic", crop: :fill %>
                            </div>
                          <% end %>
                        <% end %>
                      </div>
                      <div class="card-footer">
                        <div class="card-footer-text">
<!--                           <ul class ="list-inline list-unstyled">
                            <li>type :</li>
                            <li><%= bike.kind %></li>
                          </ul> -->
                          <h5><%= bike.description %></h5>
                          <%# User.find(bike.user_id).rating * "<i class='fa fa-star'></i>" %>
                        </div>
                        <div class="card-footer-avatar">
                          <% if bike.user.picture.nil? %>
                            <%= image_tag "http://placehold.it/50x50", class: "avatar-large" %>
                          <% else %>
                            <%= image_tag bike.user.picture, class: "avatar-large" %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="hidden-xs col-sm-4 no-padding">
          <div id="map" class="scroll_fixed"></div>
          <% content_for(:after_js) do %>
            <%= javascript_tag do %>
              $(document).on('ready', function() {
                handler = Gmaps.build('Google');
                handler.buildMap({ internal: { id: 'map' } }, function(){
                  markers = handler.addMarkers(<%= raw @markers.to_json %>);
                  handler.bounds.extendWith(markers);
                  handler.fitMapToBounds();
                });
              })
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
