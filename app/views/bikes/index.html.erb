<div class="sidebar">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 row-space-2 col-md-7">
        <% @bikes.each do |bike| %>
        <div class="card">
          <div class="card-photo">
            <%= image_tag bike.photo %>
            <img src="http://placehold.it/100x100" alt="">
          </div>
          <div class="card-footer">
            <div class="avatar">
              <%= User.find(bike.user_id).avatar %>
            </div>
            <h3><%= bike.description %></h3>
            <p><%= bike.type %></p><% User.find(bike.user_id).rating * "<i class='fa fa-star'></i>" %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-sm-0 row-space-2 col-md-5">
        <div class="map">
          <img src="http://placehold.it/500x1000" alt="">
        </div>
      </div>
    </div>
  </div>
</div>


</div>
